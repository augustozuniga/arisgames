<mx:HBox xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" height="100%" xmlns:view="org.arisgames.editor.view.*">
	
	<mx:Script>
		<![CDATA[
			import org.arisgames.editor.model.QRCodeInstance;
			import org.arisgames.editor.model.Generator;
			import mx.validators.EmailValidator;
			import mx.messaging.AbstractConsumer;
			import org.arisgames.editor.model.Quest;
			import org.arisgames.editor.model.Page;
			import org.arisgames.editor.model.Item;
			import org.arisgames.editor.model.Character;
			import org.arisgames.editor.model.GameObject;
			import org.arisgames.editor.model.GameObjectReference;
			import org.arisgames.editor.model.Folder;
			
			import org.arisgames.editor.controller.Controller;
			import org.arisgames.editor.model.Model;
			
			[Bindable] private var currentController:Controller;
			[Bindable] private var currentModel:Model;
			
			[Bindable] [Embed("assets/editor icons/folder.png")] private var folderIcon:Class;
			[Bindable] [Embed("assets/editor icons/newObjectIcon.png")] private var newObjectIcon:Class;
			[Bindable] [Embed("assets/editor icons/upload.png")] private var uploadIcon:Class;
			
			public function getCompletedDescription():String
			{
				return gameObjectCompletedDescriptionTextArea.text;
			}
			
			public function getDestroyable():Boolean
			{
				return destroyableCheckBox.selected;
			}
			
			public function getDroppable():Boolean
			{
				return droppableCheckBox.selected;
			}
			
			public function getGreeting():String
			{
				return gameObjectGreetingTextArea.text;
			}
			
			public function getObjectDescription():String
			{
				return gameObjectDescriptionTextArea.text;
			}
			
			public function getObjectName():String
			{
				return gameObjectNameTextInput.text;
			}
			
