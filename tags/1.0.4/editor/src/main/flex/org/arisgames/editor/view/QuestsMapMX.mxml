<?xml version="1.0" ?>
<v:QuestsMapView  xmlns:mx="http://www.adobe.com/2006/mxml"
                  xmlns:main="org.arisgames.editor.*"
                  xmlns:v="org.arisgames.editor.view.*"
                  xmlns:c="org.arisgames.editor.components.*"
                  paddingTop="5"
                  paddingBottom="5"
                  paddingLeft="5"
                  paddingRight="5"
				  borderStyle="solid"
				  backgroundColor="#999999"
                >
				
		<v:QuestsMapQuestEditorView id="questEditor" x="301" y="-275" width="100%" height="100%" includeInLayout="false"/>
				
				
		<mx:Panel title="Quests Editor" height="100%" width="100%" paddingTop="10" paddingLeft="10" paddingRight="10" paddingBottom="10">
			<mx:HBox borderStyle="solid" height="100%" width="100%" backgroundColor="#CCCCCC"/>
			<mx:ControlBar height = "10%" id="questsControlBar">
				<mx:Button id="closeQuestsMapButton" label="Close Quests Map"/>
				<mx:Button id="saveQuestsMapButton" label="Save Quests Map"/>
				<mx:Button id="addQuestButton" label="Add New Quest"/>
				<mx:Spacer width="100%" id="spacer"/>
			</mx:ControlBar>
		</mx:Panel>
		
		<mx:Move id="questEditShow" target="{questEditor}" yTo="0" duration="1500"/>
		<mx:Move id="questEditHide" target="{questEditor}" yTo="-275" duration="1000"/>
			
</v:QuestsMapView>
