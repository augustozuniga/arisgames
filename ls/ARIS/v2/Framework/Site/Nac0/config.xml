<?xml version="1.0" ?>
<!--

Each Framework_Site must have a config.xml. This is loaded up by Framework_Site
and can be accessed via Framework::$site->config. Feel free to add your own
configuration stuff here.

-->
<framework>
    <!-- 
        Change this to the appropriate DSN for PEAR's DB class.
    -->
    <db>
        <type>MySQL</type>
        <dsn>mysql:dbname=aris;host=localhost;username=arisuser;password=arispwd</dsn>
    </db>

    <!-- 
        This MUST be readable/writeable by your web server's user (this is
        normally nobody/nogroup or www-data/www-data).
    -->
    <logFile>/tmp/framework.log</logFile>

	<!--
		app				-	The name of the ARIS application
		company			-	The "company" that created the application
		techEmail		-	The email address of technical support/help 
	-->
	<aris>
		<app>mDesk</app>
		<company>NAC</company>
		<techEmail>nacrecruitment@gmail.com</techEmail>
		<tablePrefix>nac0_</tablePrefix>
		<main>
			<title>New America Corporation</title>
			<body><![CDATA[
			<p align = 'center'><img src = "Framework/Site/Nac0/Templates/Default/templates/nac_logo.png" width= "200px"/></p>
			<p align = 'center'>Please begin the volenteer application and psychological profile by selecting the profile application below.</p>
			]]></body>
		</main>
	</aris>

    <!--
        userTable       -   The users table to draw user data from 
        userField       -   The primary key for userTable
        defaultUser     -   Create a dummy record and put it's primary key here
    -->
    <user>
        <userTable>players</userTable>
        <userField>player_id</userField> 
        <defaultUser>0</defaultUser>
        <!-- 
            Uncomment this to have Framework_User::singleton() load up your
            Framework_User_Example class.
            <userClass>Example</userClass> 
        -->
    </user>
    <!-- See Framework_Auth_ACL -->
    <!--
    <acl>
        <class name="Framework_Module_Home"
               event="__default"
               accessLevel="3" />
    </acl>
    -->
</framework>
